<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="30dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/editTextLocationBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Location"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/editTextDateBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Date"
            android:layout_marginBottom="20dp"
            android:inputType="date"/>

        <EditText
            android:id="@+id/editTextNameBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Name"
            android:layout_marginBottom="20dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextBusinessBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Business Name"
            android:layout_marginBottom="20dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextPhoneBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            android:layout_marginBottom="20dp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/editTextEmailBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email Address"
            android:layout_marginBottom="20dp"
            android:inputType="textEmailAddress"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBook"
            android:text="Book"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnClose"/>

    </LinearLayout>

</ScrollView>